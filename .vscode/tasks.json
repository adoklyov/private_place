{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "g++ /home/default/private_place/src/main.cpp /home/default/private_place/src/Player.cpp /home/default/private_place/src/Button.cpp /home/default/private_place/src/Board.cpp /home/default/private_place/src/Game.cpp -I/usr/include/SDL2 -D_REENTRANT -L/usr/lib -lSDL2 -lSDL2_image -lSDL2_mixer -lSDL2_ttf -o /home/default/private_place/src/main"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            }
        },
        {
            "label": "build & run",
            "type": "shell",
            "windows": {
